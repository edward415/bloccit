<div class="media">
  <%= render partial: 'votes/voter', locals: { post: post } %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to (markdown post.title), topic_post_path(post.topic, post) %>
      <%= image_tag(post.picture_url(:thumb), width: 50, height: 50) if post.picture? %>
    </h4>
    <small>
      <%= image_tag(post.user.avatar_url(:thumb), width: 50, height: 50) if post.user.avatar?%>
        submitted <%= time_ago_in_words(post.created_at) %> ago by 
        <%= post.user.name %><br/>
        <%= post.comments.count %> Comments
    </small>
  </div>
  </div>