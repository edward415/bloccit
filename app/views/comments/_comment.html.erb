<div class="media">
    <% link_to '#', class: 'pull-left' do %>
    <%= image_tag(comment.user.avatar_url(:thumb), width: 50, height: 50) if comment.user.avatar? %>
    <% end %>
    <div class="media-body">
        <small><%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago</small>
        <% if policy(comment).destroy? %>
            <%= link_to "Delete", [@post, comment], method: :delete %>
        <% end %>
        <p><%= comment.body %></p>
    </div>    
</div>
